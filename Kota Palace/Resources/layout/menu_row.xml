
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="7dp"
>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="@drawable/card_style"
    >

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:minWidth="25px"
            tools:ignore="ContentDescription"
            android:minHeight="25px"
            android:scaleType="centerCrop"
            android:id="@+id/menu_row_img" 
        />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3" 
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/menu_row_name_of_spatlo" 
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/menu_row_add_ons" 
                android:textColor="@color/colorThemeColor"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/menu_row_status" 
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/menu_row_price" 
            />
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                app:singleSelection="false"
                android:id="@+id/chipAddOns"
               
            />
         </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_row_BtnAddToCart"
            android:layout_gravity="right"
            app:icon="@mipmap/ic_add_black_18dp"
            android:layout_marginRight="10dp"
            app:iconGravity="textStart"
                
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>