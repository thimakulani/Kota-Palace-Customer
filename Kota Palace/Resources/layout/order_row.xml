<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:elevation="5dp"
    android:layout_margin="5dp"
    tools:ignore="HardcodedSize"
    
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="HardcodedSize"
        android:background="@drawable/card_style"
        
    >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/order_id"
        />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_item_name"
            android:layout_alignParentEnd="true"
        />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/order_item_name"
            android:text="@string/quantity"
        />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_item_quantity"
            android:layout_below="@+id/order_item_name"
            android:layout_alignParentEnd="true"
        />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/order_item_quantity"
            android:text="@string/item_price"
            android:capitalize="characters"
        />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_item_total_price"
            android:layout_below="@+id/order_item_quantity"
            android:layout_alignParentEnd="true"
        />
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="2dp"
            android:layout_marginTop="5dp"
            android:id="@+id/cardv"
            android:layout_margin="3dp"
            android:layout_below="@+id/order_item_total_price"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/card_style"
            >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_item"
                    android:textColor="@color/colorPrimary"
                    
                />
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:singleLine="false"
                    android:id="@+id/order_item_products"
                />
             </LinearLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/order_item_status"
            android:layout_margin="3dp"
            android:layout_below="@+id/cardv"
            android:layout_alignParentEnd="true"
        />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
