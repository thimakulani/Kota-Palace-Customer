<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="landing_page"
    
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208.5dp"
            
        >
        <ImageView
            android:layout_width="192.0dp"
            android:layout_height="127.0dp"
            android:src="@drawable/kota_palace_white"
            android:id="@+id/imageView1"
            android:layout_centerInParent="true"
            android:layout_marginTop="0.0dp"
            android:layout_marginBottom="0.0dp"
            android:contentDescription="description"
            tools:ignore="HardcodedText" 

            />
        <TextView
            android:text="@string/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:layout_below="@+id/imageView1"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/top_radius_style"
        android:id="@+id/linearLayout1"
        android:padding="5dp"
        app:layout_anchorGravity="center"
        
            >

        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorThemeColor"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_name"
                android:drawableTint="@android:color/darker_gray"
                android:drawableLeft="@mipmap/ic_person_pin_black_18dp"
                android:inputType="textPersonName"
                android:id="@+id/SignupInputNames"
                    />
        </com.google.android.material.textfield.TextInputLayout> 
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorThemeColor"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_last_name"
                android:drawableTint="@android:color/darker_gray"
                android:drawableLeft="@mipmap/ic_person_pin_black_18dp"
                android:inputType="textPersonName"
                android:id="@+id/SignupInputLastName"
                    />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorThemeColor"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_phone_number"
                android:drawableLeft="@mipmap/ic_phone_paused_black_18dp"
                android:drawableTint="@android:color/darker_gray"
                android:phoneNumber="true"
                android:inputType="phone"
                android:id="@+id/SignupInputPhoneNr"
                    />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorThemeColor"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            
                >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_email"
                android:drawableLeft="@mipmap/ic_email_black_18dp"
                android:inputType="textEmailAddress"
                android:id="@+id/SignupInputEmail"
                android:drawableTint="@android:color/darker_gray"

                    />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorThemeColor"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_password"
                android:drawableLeft="@mipmap/ic_enhanced_encryption_black_18dp"
                android:password="true"
                android:drawableTint="@android:color/darker_gray"
                android:inputType="textPassword"
                android:id="@+id/SignupInputPassword"
                    />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            app:layout_anchor="@+id/scrollView1"
            app:layout_anchorGravity="bottom"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="15dp"
            tools:ignore="MissingDimension"
        >

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/BtnSignIn"
                android:text="@string/btn_login"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAllCaps="false"
                app:cornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/colorThemeColor"
                android:layout_toRightOf="@+id/signInWithGoogle"
                
            />
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/Register"
                android:text="@string/btn_sign_up"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textAllCaps="false"
                app:cornerRadius="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/colorThemeColor"
                android:layout_toRightOf="@+id/signInWithGoogle"
                
            />


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>