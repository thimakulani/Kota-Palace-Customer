<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_style_2"
    tools:ignore="HardcodedColor"

>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout1"
        android:background="@color/float_transparent"
    >
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar_main"
            android:layout_height="wrap_content"/>

    </com.google.android.material.appbar.AppBarLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FragHomeHost"
        android:layout_below="@+id/appBarLayout1"
        android:layout_above="@+id/MenuNav"
        
    />
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/MenuNav"
        android:background="#EDE7F6"
        android:layout_margin="5dp"
        app:cnb_radius="8dp"
        tools:ignore="HardcodedSize" 
        
    />



</RelativeLayout>
