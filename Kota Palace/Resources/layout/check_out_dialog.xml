<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_style"
    
>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:layout_margin="10dp"
        android:id="@+id/check_out_fab_close"
        
        android:tint="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark"
        
        android:layout_gravity="right"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout1"
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/check_out_item_name" 
                    android:hint="@string/item_name"
                 />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:prefixText="@string/item_currency"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/check_out_item_price" 
                    android:hint="@string/item_price"
                    
                 />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
             />
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:singleSelection="false"
                app:singleLine="false"
                android:id="@+id/check_out_item_add_ons"
             />
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
             />
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:singleSelection="false"
                app:singleLine="false"
                android:id="@+id/check_out_item_sources"
             />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout4"
            >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/item_description"
                    android:id="@+id/check_out_item_additional_info" 
                 />

            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout1" 
            >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_out_item_remove"
                    android:layout_toLeftOf="@+id/check_out_item_counter"
                    app:iconSize="@dimen/abc_action_bar_content_inset_material"
                    android:backgroundTint="@color/colorRed"
                    app:iconGravity="textStart"
                    app:icon="@mipmap/ic_remove_black_18dp"
                />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_out_item_counter"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:layout_toLeftOf="@+id/check_out_item_add"
                 />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_out_item_add"
                    app:iconSize="@dimen/abc_action_bar_content_inset_material"
                    app:icon="@mipmap/ic_add_black_18dp"
                    android:layout_alignParentRight="true"
                    app:iconGravity="textStart"
                    android:backgroundTint="@color/colorThemeColor"
                />   
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BtnCheckOut"
                android:layout_margin="5dp"
                android:backgroundTint="@color/colorThemeColor"
                android:text="@string/add_to_cart"
            />
         </LinearLayout>
     </ScrollView>
</LinearLayout>
